@model Banner
@{
    ViewData["Title"] = "Index";
    int counter = 1;
}
<div class="row justify-content-between">
    <div class="col-lg-2">
        <h1 class="h3 mb-4 text-gray-800">Banner Page</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                
                    <th>
                        Image
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Created at
                    </th>
                    <th>
                        Updated at
                    </th>
                    <th>
                        Setting
                    </th>
                </tr>
            </thead>
            <tbody>
               
                <tr>

                    <td>
                        <img width="100" src="~/img/banner/@Model.Image"/>   
                    </td>

                    <td>
                        @Model.Title
                    </td>
                    <td>
                        @Model.CreatedAt?.ToString("dd/mm/yyyy")
                    </td>
                    <td>
                        @Model.UpdatedAt?.ToString("dd/mm/yyyy")
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-area="manage" asp-controller="banner" asp-action="update" asp-route-id="@Model.Id">Update</a>

                    </td>
                </tr>
             
                
            </tbody>
        </table>

    </div>
</div>
