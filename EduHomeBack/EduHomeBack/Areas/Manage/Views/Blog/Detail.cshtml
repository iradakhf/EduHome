@model Blog
@{
    ViewData["Title"] = "Detail";
    int counter = 1;
}

<h1 class="h3 mb-4 text-gray-800"> Blog Detail</h1>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>

                    <th>
                        Image
                    </th>
                    <th>
                        Title
                    </th>

                    <th>
                        Author
                    </th>
                    <th>
                        Date
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Tag
                    </th>
                </tr>
            </thead>
            <tbody>

                <tr>
                    <td>
                        <img width="100" src="~/img/blog/@Model.Image" />

                    </td>
                    <td>
                        @Model.Title
                    </td>
                    <td>
                        @Model.Author
                    </td>
                    <td>
                        @Model.Date.ToString("dd/mm/yyyy")
                    </td>
                    <td>
                        @Model.Description
                    </td>
                    <td>
                        @Model.Category.Name
                    </td>
                    <td>
                            @foreach (BlogTag blogTag in Model.BlogTags)
                            {

                                @blogTag.Tag.Name
                                <br>
                            }
                        
                    </td>

                </tr>

            </tbody>
        </table>

    </div>
</div>
@section script{
    @await Html.PartialAsync("_ValidationPartial");
}