@model List<Comment>
@{
    ViewData["Title"] = "BlogComments";
    int counter = 1;
}

<div class="row justify-content-between">
    <div class="col-lg-2">
        <h1 class="h3 mb-4 text-gray-800">Blog Comments</h1>
    </div>

</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        N:
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Subject
                    </th>
                    <th>
                        Message
                    </th>
                    <th>
                        Created at
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (Comment comment in Model)
                {
                    <tr>
                        <td>
                            @counter
                        </td>

                        <td>
                            @comment.Name
                        </td>
                        <td>
                            @comment.Email
                        </td>
                        <td>
                            @comment.Subject
                        </td>
                        <td>
                            @comment.Message
                        </td>
                        <td>
                            @comment.CreatedAt?.ToString("dd/mm/yyyy")
                        </td>
                    </tr>
                    counter++;
                }
            </tbody>
        </table>

    </div>
</div>

