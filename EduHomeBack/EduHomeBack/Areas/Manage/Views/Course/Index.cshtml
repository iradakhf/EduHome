@model IEnumerable<Course>
@{
    ViewData["Title"] = "Index";
    int counter = 1;
}
<div class="row justify-content-between">
    <div class="col-lg-2">
        <h1 class="h3 mb-4 text-gray-800">Course Page</h1>
    </div>
    <div class="col-lg-1">
        <a asp-area="manage" asp-controller="course" asp-action="create" class="btn btn-primary">Create</a>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>

                    <th>
                        Image
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Created at
                    </th>
                    <th>
                        Setting
                    </th>
                </tr>
            </thead>
            <tbody>

                @foreach (Course course in Model)
                {
                    <tr>
                        <td>
                            <img width="100" src="~/img/course/@course.Image" />
                        </td>

                        <td>
                            @course.Name
                        </td>
                        <td>
                            @course.Description
                        </td>
                        <td>
                            @course.CreatedAt?.ToString("dd/mm/yyyy")
                        </td>
                        <td>
                            <a class="btn btn-warning" asp-area="manage" style="width:70%; margin-bottom:20px" asp-controller="course" asp-action="update" asp-route-id="@course.Id">Update</a>
                            <a class="btn btn-danger" asp-area="manage" style="width: 70%; margin-bottom: 20px; " asp-controller="course" asp-action="delete" asp-route-id="@course.Id">Delete</a>
                            <a class="btn btn-success" asp-area="manage" style="width: 70%; margin-bottom: 20px;" asp-controller="course" asp-action="detail" asp-route-id="@course.Id">Detail</a>
                        </td>
                    </tr>
                }


            </tbody>
        </table>

    </div>
</div>
