@model Event
@{
    ViewData["Title"] = "Detail";
    int counter = 1;
}

<h1 class="h3 mb-4 text-gray-800"> Event Detail</h1>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>

                    <th>
                        Name
                    </th>

                    <th>
                        Image
                    </th>
                    <th>
                        Details
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Tag
                    </th>
                    <th>
                        Speaker
                    </th>
                </tr>
            </thead>
            <tbody>

                <tr>
                    <td>
                        @Model.Name
                    </td>
                    <td>
                        <img width="100" src="~/img/event/@Model.Image" />

                    </td>
                    <td>
                        Date:  @Model.Date.ToString("dd/mm/yyyy")
                        <br>
                        StartTime:  @Model.StartTime.ToString("HH")
                        <br>
                        EndTime : @Model.EndTime.ToString("HH")
                        <br>
                        Venue : @Model.Venue
                        <br>
                        Description : @Model.Description
                    </td>
                    <td>
                        @Model.Category.Name
                    </td>
                    <td>
                        @foreach (EventTag EventTag in Model.EventTags)
                        {

                            @EventTag.Tag
                            <br>
                        }

                    </td>
                    <td>
                        @foreach (EventSpeaker eventSpeaker in Model.EventSpeakers)
                        {

                            @eventSpeaker.Speaker
                            <br>
                        }

                    </td>

                </tr>

            </tbody>
        </table>

    </div>
</div>
@section script{
    @await Html.PartialAsync("_ValidationPartial");
}