@model Event
@{
    ViewData["Title"] = "Update";
    IEnumerable<Category> categories = ViewBag.Categories;
    IEnumerable<Tag> tags = ViewBag.Tags;
    SelectList selectCategoryListItems = new SelectList(categories, nameof(Category.Id), nameof(Category.Name));
    SelectList selectTagListItems = new SelectList(tags, nameof(Tag.Id), nameof(Tag.Name));
    IEnumerable<Speaker> speakers = ViewBag.Speakers;
    SelectList selectSpeakerListItems = new SelectList(speakers, nameof(Speaker.Id), nameof(Speaker.Name));


}

<h1 class="h3 mb-4 text-gray-800">Update Event</h1>
<div class="row justify-content-center">
    <div class="col-lg-8">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" placeholder="Name">
                <span asp-validation-for="Name" class="text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description">Description</label>
                <input asp-for="Description" class="form-control" placeholder="Description">
                <span asp-validation-for="Description" class="text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date">Date</label>
                <input type="date" asp-for="Date" class="form-control" placeholder="Date">
                <span asp-validation-for="Date" class="text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartTime">StudentsCount</label>
                <input type="time" asp-for="StartTime" class="form-control" placeholder="StartTime">
                <span asp-validation-for="StartTime" class="text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndTime">EndTime</label>
                <input type="time" asp-for="EndTime" class="form-control" placeholder="EndTime">
                <span asp-validation-for="EndTime" class="text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Venue">Venue</label>
                <input asp-for="Venue" class="form-control" placeholder="Venue">
                <span asp-validation-for="Venue" class="text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="File">Image File</label>
                <input asp-for="File" class="form-control" placeholder="Image File">
                <span asp-validation-for="File" class="text text-danger"></span>
            </div>
            <div  class="form-group">
                <label>Catgeory</label>
                <select asp-for="CategoryId" class="form-control" asp-items="selectCategoryListItems">
                </select>
            </div>
            <div  class="form-group">
                <label>Tag</label>
                <select asp-for="TagIds" multiple class="form-control" asp-items="selectTagListItems">
                </select>
            </div>
            <div class="form-group">
                <label>Speaker</label>
                <select asp-for="SpeakerIds" multiple class="form-control" asp-items="selectSpeakerListItems">
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>
@section script{
    @await Html.PartialAsync("_ValidationPartial");
}