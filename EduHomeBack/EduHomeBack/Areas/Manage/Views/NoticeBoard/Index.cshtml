@model IEnumerable<NoticeBoard>
@{
    ViewData["Title"] = "Index";
    int counter = 1;
}
<div class="row justify-content-between">
    <div class="col-lg-2">
        <h1 class="h3 mb-4 text-gray-800">Notice Board Page</h1>
    </div>
    <div class="col-lg-1">
        <a asp-area="manage" asp-controller="NoticeBoard" asp-action="create" class="btn btn-primary">Create</a>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        №
                    </th>

                    <th>
                        Text
                    </th>
                    <th>
                        Date
                    </th>

                    <th>
                        Created at
                    </th>
                    <th>
                        Setting
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (NoticeBoard notice in Model)
                {
                <tr>
                    <td>
                        @counter
                    </td>

                    <td>
                        @notice.Text
                    </td>
                    <td>
                        @notice.Date.ToString("dd/mm/yyyy")
                    </td>
                    <td>
                        @notice.CreatedAt?.ToString("dd/mm/yyyy")
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-area="manage" asp-controller="NoticeBoard" asp-action="update" asp-route-id="@notice.Id">Update</a>
                        <a class="btn btn-danger" asp-area="manage" asp-controller="NoticeBoard" asp-action="delete" asp-route-id="@notice.Id">Delete</a>
                        <a class="btn btn-primary" asp-area="manage" asp-controller="NoticeBoard" asp-action="ShowDetail" asp-route-id="@notice.Id">Detail</a>

                    </td>
                </tr>
                    counter++;
                }
            </tbody>
        </table>

    </div>
</div>
