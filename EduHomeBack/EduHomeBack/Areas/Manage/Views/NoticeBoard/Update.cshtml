@model NoticeBoard
@{
    ViewData["Title"] = "Update";
}

<h1 class="h3 mb-4 text-gray-800">Update NoticeBoard</h1>
<div class="row justify-content-center">
    <div class="col-lg-8">
        <form method="post">
            <div class="form-group">
                <label asp-for="Text">Text</label>
                <input asp-for="Text" class="form-control" placeholder="Enter Text">
                <span asp-validation-for="Text" class="text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date">Date</label>
                <input type="date" asp-for="Date" class="form-control" placeholder="Date">
                <span asp-validation-for="Date" class="text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="File">Image File</label>
                <input asp-for="File" class="form-control" placeholder="Image File">
                <span asp-validation-for="File" class="text text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>

@section script{
    @await Html.PartialAsync("_ValidationPartial");
}