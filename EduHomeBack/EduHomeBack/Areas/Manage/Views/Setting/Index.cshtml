@model IEnumerable<Settings>
@{
    ViewData["Title"] = "Index";
    int counter = 1;
}
<div class="row justify-content-between">
    <div class="col-lg-2">
        <h1 class="h3 mb-4 text-gray-800">Setting Page</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        N:
                    </th>
                    <th>
                        Key
                    </th>
                    <th>
                        Value
                    </th>
                    <th>
                        Created at
                    </th>
                    <th>
                        Updated at
                    </th>
                    <th>
                        Setting
                    </th>
                </tr>
            </thead>
            <tbody>
@foreach (Settings settings in Model)
{
                <tr>
                    <td>
                        @counter
                    </td>
                    <td>
                        @settings.Key
                    </td>
                    <td>
                        @settings.Value
                    </td>
                    <td>
                        @settings.CreatedAt?.ToString("dd/mm/yyyy")
                    </td>
                    <td>
                        @settings.UpdatedAt?.ToString("dd/mm/yyyy")
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-area="manage" asp-controller="banner" asp-action="update" asp-route-id="@settings.Id">Update</a>

                    </td>
                </tr>

                counter++;
}

            </tbody>
        </table>

    </div>
</div>
