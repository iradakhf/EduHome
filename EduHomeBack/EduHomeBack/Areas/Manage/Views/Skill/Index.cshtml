@model IEnumerable<Skill>
@{
    ViewData["Title"] = "Index";
    int counter = 1;
}
<div class="row justify-content-between">
    <div class="col-lg-2">
        <h1 class="h3 mb-4 text-gray-800">Skill Page</h1>
    </div>
    <div class="col-lg-1">
        <a asp-area="manage" asp-controller="skill" asp-action="create" class="btn btn-primary">Create</a>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                      N:
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Created at
                    </th>
                    <th>
                        Updated at
                    </th>
                    <th>
                        Setting
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Skill skill in Model)
                {
                <tr>
                    <td>
                        @counter
                    </td>
                    <td>
                        @skill.Name
                    </td>
                    <td>
                        @skill.CreatedAt?.ToString("dd/mm/yyyy")
                    </td>
                    <td>
                        @skill.UpdatedAt?.ToString("dd/mm/yyyy")
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-area="manage" asp-controller="skill" asp-action="update" asp-route-id="@skill.Id">Update</a>
                        <a class="btn btn-danger" asp-area="manage" asp-controller="skill" asp-action="delete" asp-route-id="@skill.Id">Delete</a>
                        <a class="btn btn-success" asp-area="manage" asp-controller="skill" asp-action="add" asp-route-id="@skill.Id">Add Teacher</a>

                    </td>
                </tr>
                counter++;
                }


            </tbody>
        </table>

    </div>
</div>
