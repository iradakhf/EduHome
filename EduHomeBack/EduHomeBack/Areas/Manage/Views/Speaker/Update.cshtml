@model Speaker
@{
    ViewData["Title"] = "Update";
    IEnumerable<Position> positions = ViewBag.Positions;
    SelectList selectPositionListItems = new SelectList(positions, nameof(Position.Id), nameof(Position.Name));
}

<h1 class="h3 mb-4 text-gray-800">Update Speaker</h1>
<div class="row justify-content-center">
    <div class="col-lg-8" >
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter Name">
                <span asp-validation-for="Name" class="text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname">Surname</label>
                <input asp-for="Surname" class="form-control" placeholder="Enter Surname">
                <span asp-validation-for="Surname" class="text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="File">Image File</label>
                <input asp-for="File" class="form-control" placeholder="Image File">
                <span asp-validation-for="File" class="text text-danger"></span>
            </div>
            <div class="form-group">
                <label>Position</label>
                <select asp-for="PositionId" class="form-control" asp-items="selectPositionListItems">
                </select>

            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>
@section script{
    @await Html.PartialAsync("_ValidationPartial");
}