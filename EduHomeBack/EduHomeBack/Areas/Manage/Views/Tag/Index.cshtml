@model IEnumerable<Tag>
@{
    ViewData["Title"] = "Index";
    int counter = 1;
}
<div class="row justify-content-between">
    <div class="col-lg-2">
        <h1 class="h3 mb-4 text-gray-800">Tag Page</h1>
    </div>
    <div class="col-lg-1">
        <a asp-area="manage" asp-controller="speaker" asp-action="create" class="btn btn-primary">Create</a>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        №
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Created at
                    </th>
                    <th>
                        Updated at
                    </th>
                    <th>
                        Setting
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Tag tag in Model)
                {
                <tr>
                    <td>
                        @counter
                    </td>
                    <td>
                        @tag.Name
                    </td>
                    <td>
                        @tag.CreatedAt?.ToString("dd/mm/yyyy")
                    </td>
                    <td>
                        @tag.UpdatedAt?.ToString("dd/mm/yyyy")
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-area="manage" asp-controller="tag" asp-action="update" asp-route-id="@tag.Id">Update</a>
                        <a class="btn btn-success" asp-area="manage" asp-controller="tag" asp-action="Add" asp-route-id="@tag.Id">Add Blog Event or Course</a>
         

                    </td>
                </tr>
                    counter++;
                }


            </tbody>
        </table>

    </div>
</div>
