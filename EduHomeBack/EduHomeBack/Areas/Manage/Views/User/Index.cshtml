@model User
@{
    ViewData["Title"] = "Index";
    int counter = 1;
}
<div class="row justify-content-between">
    <div class="col-lg-2">
        <h1 class="h3 mb-4 text-gray-800">User Page</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                </tr>
            </thead>
            <tbody>

                <tr>

                    <td>
                        @Model.Name
                    </td>
                    <td>
                        @Model.CreatedAt?.ToString("dd/mm/yyyy")
                    </td>
                    <td>
                        @Model.UpdatedAt?.ToString("dd/mm/yyyy")
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-area="manage" asp-controller="User" asp-action="update" asp-route-id="@Model.Id">Update</a>
                        <a class="btn btn-warning" asp-area="manage" asp-controller="User" asp-action="delete" asp-route-id="@Model.Id">Delete</a>
                        <a class="btn btn-warning" asp-area="manage" asp-controller="User" asp-action="create" asp-route-id="@Model.Id">Create</a>

                    </td>
                </tr>


            </tbody>
        </table>

    </div>
</div>
