@model IEnumerable<CourseVM>
@{
    ViewData["Title"] = "Index";
}

<!-- Banner Area Start -->
@(await Html.PartialAsync("_BannerPartial", "course")))
<!-- Banner Area End -->
<!-- Course Start -->
<div class="course-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="course-title">
                    <h3>search courses</h3>
                </div>
                <div class="course-form">
                    <form id="search" action="#">
                        <input id="InputCourse" type="search" placeholder="Search..." name="search" />
                        <button id="BtnCourse" type="submit">search</button>
                    </form>
                    <ul id="searchResultCourse" style="border: 1px solid; background-color:white; text-decoration:none; width: 100%; height: auto; position: absolute; z-index: 8;">
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
                @(await Component.InvokeAsync("Course"))
           </div>
    </div>
</div>
<!-- Course End -->